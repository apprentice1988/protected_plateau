<div class='sign-row'>
  <div class='form-container'>
    <div class='form-container-inner'>
      <div class='heading center'>
        <%= image_tag('logo2.jpg', width: "100", height: "100") %>
      </div>
      <div class='signup center'>
        <%= form_for @user do |f| %>
        <div class ='signup-error'>
          <%= render 'shared/error_messages'%>
        </div>
        <p>*为必填内容</p>
        <p>已有帐号，<%= link_to "直接登录", signin_path %></p>
        <div class='signup-form'>
          <div class="input-prepend">
            <span class='add-on'><i class='icon-user'></i></span><%= f.text_field :username, class: "span3", placeholder: "用户名*" %>
          </div>
          <br/>
          <div class="input-prepend">
            <span class='add-on'><i class='icon-envelope'></i></span><%= f.text_field :email, class: "span3", placeholder: "电子邮箱*" %>
          </div>
          <br/>
          <div class="input-prepend">
            <span class='add-on'><i class='icon-phone-sign'></i></span><%= f.text_field :fixlinephone, class: "span3", placeholder: "固定电话" %>
          </div>
          <br/>
          <div class="input-prepend">
            <span class='add-on'><i class='icon-phone'></i></span><%= f.text_field :mobilephone, class: "span3", placeholder: "手机号码*" %>
          </div>
          <br/>
          <div id = "sup">
            <div class="control-group">
              <div class="controls">
              <%= f.check_box :subscription %> 
              <small>订阅最新特惠信息</small>
              </div>
            </div>
          </div>
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span><%= f.password_field :password, class: "span3", placeholder: "密码*" %>
          </div>
          <br/>
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span><%= f.password_field :password_confirmation, class: "span3", placeholder: "请再次输入密码*" %>
          </div>
          <br/>
          <div class='signup-submit'>
            <%= f.submit "提交", class: "btn" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>