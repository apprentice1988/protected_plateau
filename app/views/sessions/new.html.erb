<div class='row'>
  <div class='span4 offset1 '>
  	<br/><br/>
    <%= form_for :session, url: sessions_path, html: {class: "form-horizontal"} do |f| %>

      <div class="control-group">
        <%= f.label :email,"邮箱 :", class: 'control-label' %>
        <div class='controls'>
          <%= f.text_field :email %>
        </div>
      </div>
      <br/>
      <div class="control-group">
        <%= f.label :password, "密码 :", class: "control-label" %>
        <div class='controls'>
          <%= f.password_field :password %>
        </div>
      </div>
      <br/>
      <div class='span3 offset1'>
       <%= f.submit "登录", class: "btn btn-block  btn-primary" %>
     	</div><br/>
    <% end %>
    <p class='text-center offset1'>New user?<%= link_to "马上注册", signup_path %></p>
  </div>
</div>