<div class='sign-row'>
  <div class='form-container'>
    <div class='form-container-inner'>
      <div class='heading center'>
        <%= image_tag('logo2.jpg', width: "100", height: "100") %>
      </div>
      <div class='log center'>
        <%= form_for :session, url: sessions_path do |f| %>
          <div class="input-prepend">
            <span class='add-on'><i class='icon-envelope'></i></span><%= f.text_field :email, class: "span3", placeholder: "电子邮箱" %>
          </div>
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span><%= f.password_field :password, class: "span3", placeholder: "密码" %>
          </div>
          <div class='log-submit'>
           <%= f.submit "登录", class: "btn" %>
          </div>
        <% end %>
        <p>新用户?<%= link_to "马上注册", signup_path %></p>
      </div>
    </div>
  </div>
</div>