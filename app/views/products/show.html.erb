
<div class='row-fluid'>
	<div class="notice">
		<% if flash[:notice] %>
			<div class='notice'><%= flash[:notice] %></div>
		<% end %>
	</div>
	<div class='span7' id='proimg'>

 		<%= image_tag(@product.image_url, id: "replaceimage") %>
		<div id='proinfo'>
			<h3>
  			<%= @product.title %>
			</h3>
			<h4>
  			<%= @product.price %>
			</h4>
			<pre>
	  		<%= @product.description %>
	  	</pre>
		</div>
	</div>
	<div class='span1' id='microimage'>

		<%= render 'microimage' %>

	</div>

	<div class='span2'>
		<%= button_to '放到购物车', line_items_path(product_id: @product)%>
		<% if !current_user.nil? && current_user.admin? %>
			<%= link_to 'Edit', edit_product_path(@product) %> 
			<%= link_to 'Back', products_path %>
		<% end %>
	</div>
	<div class='span2'>
	</div>
</div>